{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "jsx": "react",
    "strictNullChecks": false,
    "sourceMap": true
  },
  "include": [
    "src/scripts/**/*.ts",
    "src/utils/**/*.ts"
  ],
  "exclude": ["node_modules", "docs", "apps", "packages"]
}